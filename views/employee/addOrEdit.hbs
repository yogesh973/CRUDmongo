

    <h3>{{viewTitle}}</h3>


    <form action="/employee" method="POST" autocomplete="off">
     <input type="hidden" name="_id" value="{{employee.id}}">
        <div class="form-group">
            <label>Name</label>
            <input type="text" class="form-control" name="name" placeholder="Name" value="{{employee.name}}">
          
    
        </div>
        <div class="form-group">
            <label>Company</label>
            <input type="text" class="form-control" name="company" placeholder="Company" value="{{employee.company}}">
            
        <div class="form-group">
            <label>Age</label>
            <input type="number" class="form-control" name="age" placeholder="Age" value="{{employee.age}}">
        </div>
        <div class="form-group">
            <label>State</label>
            <input type="text" class="form-control" name="state" placeholder="State" value="{{employee.state}}">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-info">Submit</button>
        <a class="btn btn-secondary" href="/employee/list">All Users</a>

            </div>
    </form>
    
